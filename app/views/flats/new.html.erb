<div class="container">
  <h1>Add our own quote ! </h1>

  <div class="container">
  
  
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit class: "btn btn-outline-primary" %>
    <% end %>

  </div>

  <hr>
</div>